<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="point_of_sale.OrderlineExtension" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
            <xpath expr="//li[hasclass('orderline')]//div[hasclass('d-flex')]//div[hasclass('product-price')]"
                   position="after">
                   <i style="margin-left: 3%;" id="clear_icon"
                      class="fa fa-times-circle" t-on-click="() =>this.removeLine()"/>
        </xpath>
    </t>
</templates>
